#callback.modal
  button(type="button").modal__close.callback_close

  h3.modal__title Обратный звонок

  form.ajax-form
    input(type="hidden", name="subject", value="Обратный звонок")
    .form-group
      input(type="text", name="name", placeholder="Ваше имя", required).form-field
    .form-group
      input(type="tel", name="phone", placeholder="Ваш телефон", pattern="\\+7\\s\\([0-9]{3}\\)\\s\\d{3}[\\-]\\d{2}[\\-]\\d{2}", required).form-field
    .form-group.form-group--btn
      input(type="submit", value="Заказать").btn

